@using WebApplication2.Enums
@model Todo

<h1>Edit a Todo</h1>
 
<form asp-controller="Todoes" asp-action="Edit" method="post">
    <input asp-for ="Id" type ="hidden" value ="@Model.Id" />
    <div class="form-group">
        <label>Description</label>
         <input asp-for="Description" placeholder="Insert Description"/>
        </div>
    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<TodoStatus>()">
            <option selected ="selected" value="" class="form-control">Todo</option>
        </select>
    </div>

      <div class="form-group">
         <button type="submit" class="btn btn-secondary">Edit</button>
      </div>
</form>